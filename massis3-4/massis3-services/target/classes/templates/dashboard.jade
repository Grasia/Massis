extends layout

block content
	.row
		.col-md-12
			h1.page-header
				| Dashboard 
				small Summary
	//
	.row
		+boxinfo1(context.runningSimulations,"Running simulations")
		+boxinfo1(3993,"Agents")
		+boxinfo1(273462,"Simulation Events")
		+boxinfo1(31,"Cameras")
